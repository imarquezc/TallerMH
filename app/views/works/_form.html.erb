<script type="text/javascript">
    $("#estanque").roundSlider({
        radius: 90,
        circleShape: "half-top",
        sliderType: "min-range",
        showTooltip: true,
        value: 0,
        max:12,
        width:20,
        change: function (e) {
            var value = e.value, color;
            if (value < 3) color = "red";
            else if (value < 6) color = "yellow";
            else color = "green";

            $(".rs-range-color").css("background-color", color) ;
        }

    });
    $(".rs-range-color").css("background-color", "white") ;

</script>
