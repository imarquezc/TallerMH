

<div class="container">
  <div class="jumbotron">
    <div class="container">
      <p><h1>Trabajos</h1></p>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Cliente</th>
        <th>Veh√≠culo</th>
        <th class="text-center">Kilometraje</th>
        <th>Tipo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @works.each do |work| %>
        <tr class='clickable-row'>
          <td><%= work.car.client.full_name %></td>
          <td><%= work.car.full_name %></td>
          <td align="center"><%=  number_with_delimiter(work.kilometraje, :delimiter => '.') %></td>
          <td><%= work.tipo %></td>
          <td><%= link_to 'Ver', work %></td>
          <td><%= link_to 'Editar', edit_work_path(work) %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <center><%= will_paginate @works %></center>
</div>