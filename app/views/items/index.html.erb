<p id="notice"><%= notice %></p>

<div class="container">
  <div class="jumbotron">
    <div class="container">
    <div class="col-md-8 col-xs-8">
      <p><h1>Stock en Bodega</h1></p>
    </div>
    <div class="col-md-4 col-xs-4">
      <br><br>
      <%= link_to 'Nuevo Producto', new_item_path, class: "btn btn-lg btn-danger pull-right", id:"nuevocliente" %>
    </div>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Marca</th>
        <th>Identificador</th>
        <th>Descripcion</th>
        <th>Stock</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr class='clickable-row'>
          <td><%= item.nombre %></td>
          <td><%= item.marca %></td>
          <td><%= item.identificador %></td>
          <td><%= item.descripcion %></td>
          <td><%= item.stock %></td>
          <td><%= link_to 'Show', item %></td>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>


