<p id="notice"><%= notice %></p>
<div class="container">
  <div class="col-md-5">

    <h1><span id="box" class="glyphicon glyphicon-road"></span> Datos Vehículo</h1>
    <p>
      <strong>Patente:</strong>
      <%= @car.patente %>
    </p>

    <p>
      <strong>Modelo:</strong>
      <%= @car.full_name %>
    </p>

    <p>
      <strong>Año:</strong>
      <%= @car.año %>
    </p>

    <p>
      <strong>Kilometraje:</strong>
      <%= @car.kilometraje %>
    </p>

    <p>
      <strong>Color:</strong>
      <%= @car.color %>
    </p>

    <p>
      <strong>Comentarios:</strong>
      <%= @car.comentarios %>
    </p>
    <% if @car.client.present?%>
      <p>
        <strong>Cliente:</strong>
        <%= link_to @car.client.full_name, client_path(@car.client) %>
      </p>
    <%end%>

    <%= link_to 'Actualizar Datos', edit_car_path(@car), class: "btn btn-lg btn-primary", id:"nuevocliente" %>
    <%= link_to 'Volver', :back, class: "btn btn-lg btn-danger", id:"nuevocliente"%>
    </div>

    <div class="col-md-7">

      <h1><span id="box" class="glyphicon glyphicon-wrench"></span> Trabajos del Vehículo</h1>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Kilometraje</th>
              <th>Tipo</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @car.works.each do |work| %>
              <tr>
                <td><%= work.dd_mm_aaaa %></td>
                <td><%= work.kilometraje %></td>
                <td><%= work.tipo %></td>
                <td><%= link_to 'Detalles', work %></td>
                <td><%= link_to 'Editar', edit_work_path(work) %></td>
                <td><%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <h3><%=link_to 'Agregar nuevo trabajo'.html_safe, new_work_path, :id => @car.id%></h3>

    </div>

</div>