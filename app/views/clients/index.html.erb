<div class="container">
  <div class="jumbotron">
    <div class="container">
      <div class="col-md-12 col-xs-12">
        <h1 class=>Clientes</h1>
        <%= link_to 'Nuevo Cliente', new_client_path, class: "btn btn-lg btn-danger new-client", id:"nuevocliente"%>
      </div>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Rut</th>
        <th>Nombre</th>
        <th>Direccion</th>
        <th>Contacto</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clients.each do |client| %>
        <tr class='clickable-row' data-href=<%= client_path(client) %>>
          <td><%= client.rut %></td>
          <td><%= client.full_name %></td>
          <td><%= client.direccion_full %></td>
          <td><%= client.contacto %></td>
          <td><%= link_to 'Ver', client %></td>
          <td><%= link_to 'Editar', edit_client_path(client) %></td>
          <td><%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <center><%= will_paginate @clients %></center>
</div>


