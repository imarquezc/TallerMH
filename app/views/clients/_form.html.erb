  <%= form_for(@client) do |f| %>
    <% if @client.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@client.errors.count, "errores") %> Cliente no pudo ser guardado:</h2>

        <ul>
        <% @client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :nombre %><br>
      <%= f.text_field :nombre %>
    </div>
    <div class="field">
      <%= f.label :apellido %><br>
      <%= f.text_field :apellido %>
    </div>
    <div class="field">
      <%= f.label :mail %><br>
      <%= f.text_field :mail %>
    </div>
    <div class="field">
      <%= f.label :direccion %><br>
      <%= f.text_field :direccion %>
    </div>
    <div class="field">
      <%= f.label :comuna %><br>
      <%= f.text_field :comuna %>
    </div>
    <div class="field">
      <%= f.label :telefono %><br>
      <%= f.text_field :telefono %>
    </div>
    <div class="field">
      <%= f.label :celular %><br>
      <%= f.text_field :celular %>
    </div>
    <div class="actions">
      <%= f.submit class: "btn btn-lg btn-success", value: @boton%>
    <% end %>

