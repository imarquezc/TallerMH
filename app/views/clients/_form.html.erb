  <%= form_for(@client) do |f| %>
    <% if @client.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@client.errors.count, "errores") %> Cliente no pudo ser guardado:</h2>

        <ul>
        <% @client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col-md-12">
        <div class="field block">
          <%= f.label :nombre %><br>
          <%= f.text_field :nombre, style: "width:20rem;" %>
        </div>
        <div class="field block">
          <%= f.label :apellido %><br>
          <%= f.text_field :apellido, style: "width:24rem;" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="field block">
          <%= f.label :rut %><br>
          <%= f.text_field :rut, style: "width:12rem;"%>
        </div>
        <div class="field block">
          <%= f.label :mail %><br>
          <%= f.text_field :mail, style: "width:32rem;" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="field block">
          <%= f.label :direccion %><br>
          <%= f.text_field :direccion, style: "width:32rem;" %>
        </div>
        <div class="field block">
          <%= f.label :comuna %><br>
          <%= f.text_field :comuna, style: "width:12rem;" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="field block">
          <%= f.label :telefono %><br>
          <%= f.text_field :telefono, style: "width:22rem;" %>
        </div>
        <div class="field block">
          <%= f.label :celular %><br>
          <%= f.text_field :celular, style: "width:22rem;" %>
        </div>
      </div>
    </div>
    <div class="actions">
      <%= f.submit class: "btn btn-lg btn-success", value: @boton%>
    <% end %>

